pkgname=xlibre-xf86-input-vmmouse
_pkgname=xf86-input-vmmouse
version=13.2.0.3
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="xlibre-server xlibre-server-devel xlibre-server-common autoconf automake fakeroot gawk gettext libtool m4 pkgconf xorg-util-macros"
depends="virtual?xserver-abi-input-26_1"
short_desc="XLibre fork of X.Org VMWare Mouse input driver"
maintainer="Sofiya <sofiya@v.com>"
license="custom"
homepage="https://github.com/X11Libre/xf86-input-vmmouse"
