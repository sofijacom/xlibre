pre_configure() {

  ./autogen.sh
  ./configure --prefix=/usr \
    --with-udev-rules-dir=/usr/lib/udev/rules.d
  make

}

post_install() {
	vlicense COPYING
	rm -rfv "${DESTDIR}"/usr/{lib,share}/hal
}
