# Template file for 'xf86-video-openchrome'
pkgname=xlibre-xf86-video-openchrome
_pkgname=xf86-video-openchrome
version=${VERSION}
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="xlibre-server xlibre-server-devel xlibre-server-common libXvMC-devel xorgproto autoconf automake binutils fakeroot findutils gawk gcc gettext gzip libtool m4 make patch pkgconf xorg-util-macros"
depends="virtual?xserver-abi-video-28_1"
short_desc="XLibre fork of X.Org driver for VIA IGPs"
maintainer="Sofiya <sofiya@v.com>"
license="MIT"
homepage="https://github.com/X11Libre/xf86-video-openchrome"
distfiles="https://github.com/X11Libre/${_pkgname}/archive/refs/tags/${_pkgname}-${version}.tar.gz"
checksum=${SHA256}
lib32disabled=yes

CFLAGS="-I$XBPS_CROSS_BASE/usr/include/xorg -fcommon"
LDFLAGS="-Wl,-z,lazy"

case "$XBPS_TARGET_MACHINE" in
	arm*|aarch*) broken="requires sarea.h which isn't present in cross-compiled arm" ;;
esac

pre_configure() {

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

post_install() {
	vlicense COPYING
}
