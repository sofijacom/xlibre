# Template file for 'xf86-video-ati'
pkgname=xlibre-xf86-video-ati
_pkgname=xf86-video-ati
version=${VERSION}
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="xlibre-server xlibre-server-devel xlibre-server-common autoconf automake binutils fakeroot findutils gawk gcc gettext gzip libtool m4 make patch pkgconf xorg-util-macros"
depends="virtual?xserver-abi-video-28_1 mesa-dri"
short_desc="XLibre ATI Radeon video driver"
maintainer="Sofiya <sofiya@v.com>"
license="MIT"
homepage="https://github.com/X11Libre/xf86-video-ati"
distfiles="https://github.com/X11Libre/${_pkgname}/archive/refs/tags/${pkgname}-${version}.tar.gz"
checksum=${SHA256}
lib32disabled=yes

CFLAGS="-fcommon"
LDFLAGS="-Wl,-z,lazy"

case "$XBPS_TARGET_MACHINE" in
	armv6*) broken="no dri.h";;
esac

pre_configure() {

  ./autogen.sh --prefix=/usr --enable-glamor --disable-debug
  ./configure --prefix=/usr
  make
}

post_install() {
	vlicense COPYING
}
