version=2.11.0.2
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config"
makedepends="xlibre-server xlibre-server-devel xlibre-server-common mtdev-devel libXfont2-devel libevdev-devel
xorgproto autoconf automake binutils fakeroot findutils gawk gettext gzip libtool m4 make patch pkgconf xorg-util-macros"
depends="virtual?xserver-abi-input-26_1"
