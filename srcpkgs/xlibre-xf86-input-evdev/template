pre_configure() {

  ./autogen.sh
  ./configure --prefix=/usr
  make
}

post_install() {
	vlicense COPYING
}

xlibre-xf86-input-evdev-devel_package() {
	lib32disabled=yes
	depends="xlibre-server-devel ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}
